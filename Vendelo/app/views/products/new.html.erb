<%# se engloba todo el contenido en un turbo frame para poder usarlo en el tag de modal que se asigno en el application.html.rb llamado modal %>
<%# esto se incrusta en la vista de application en el turbo frame tag llamado modal %>
<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal">
    <%# Fondo negro semitransparente %>
    <div data-action="click->modal#close" class="fixed z-10 w-full h-full top-0 left-0 bg-black/50"></div>

    <%# Sidebar del modal %>
    <div data-modal-target="sidebar" class="fixed top-0 right-0 z-20 w-1/2 sm:w-3/6 lg:w-2/6 h-full bg-white overflow-y-scroll shadow flex flex-col ease-in-out duration-300 p-5 translate-x-full">
      <%# Botón de cerrar %>
      <p class="cursor-pointer mb-4" data-action="click->modal#close">❌</p>

      <%# Título del modal %>
      <h2 class="font-bold mb-4"><%= t('.title') %></h2>

      <%# Formulario o contenido dentro del modal %>
      <%= render 'form' %>
    </div>
  </div>
<% end %>
