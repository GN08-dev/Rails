<% end %>
<% if Current.user %>
  <%# se le paso el id por session path porque solicita un parametro %>
  <%= link_to t(".logout"), session_path(Current.user.id), data: {
  turbo_method: :delete,
  #turbo_confirm: t("common.confirm")
},class: "mx-2 text-black font-bold hover:text-blue-400" %>
  <%= link_to t(".favorites"), favorites_path ,class: "mx-2 text-black font-bold hover:text-blue-400"%>
