<%if Current.user && Current.user.admin? %>
<%# le pasamos lo que es add una data para que todo lo que muetre el add lo pase al turbo frame de data %>
<%= link_to t(".add"), new_product_path, class: "mx-2 text-black font-bold hover:text-blue-400", data: { turbo_frame: :modal } %>
  <%= link_to t(".categories"), categories_path ,class: "mx-2 text-black font-bold hover:text-blue-400"%>
<% end %>
<% unless Current.user %>
  <%= link_to t(".login"), new_session_path ,class: "mx-2 text-black font-bold hover:text-blue-400"%>
